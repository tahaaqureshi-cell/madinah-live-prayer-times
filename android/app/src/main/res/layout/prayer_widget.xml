<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/widget_background">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prayer Times"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/current_prayer_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current"
                android:textSize="10sp"
                android:textColor="#CCFFFFFF"
                android:gravity="center" />

            <TextView
                android:id="@+id/current_prayer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asr"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center" />

            <TextView
                android:id="@+id/current_prayer_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3:45 PM"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:gravity="center" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#33FFFFFF"
            android:layout_marginHorizontal="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/next_prayer_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textSize="10sp"
                android:textColor="#CCFFFFFF"
                android:gravity="center" />

            <TextView
                android:id="@+id/next_prayer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maghrib"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center" />

            <TextView
                android:id="@+id/next_prayer_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6:20 PM"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>